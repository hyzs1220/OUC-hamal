.some-gif{
  width: 500rpx;
}
.search-content{
   background: white;
   display: flex;
   flex-direction: column;
   align-items: center;
   padding-left: 20rpx;
   margin: center;
   height: 100%;
   
}
.search-input{
  padding-left: 10px;
  height: 35px;
  width:600rpx;
  border:  2px solid #3366CC;
  border-radius: 40px;
  margin-left: 15px;
  margin-right: 15px;
  margin-top: 15px;
}
.search-btn{
  width: 400rpx;
  top:100rpx;
  font-size: 13pt;
  line-height: 85rpx;
  height: 85rpx;
  background: #3366CC;
  color: #fff;
  border-radius: 100rpx;
}
.search-btn:active {
  opacity: .8;
}