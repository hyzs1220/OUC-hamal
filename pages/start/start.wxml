<!--start.wxml-->
<view class="container">
  <view class="remind-box" wx:if="{{remind}}">
    
  </view>
  <block wx:else>
    <image class="title" src="/img/start.png"></image>
    <view class="content">
      <view class="hd" style="transform:rotateZ({{angle}}deg);">
        <image class="logo" src="{{userInfo.avatarUrl}}"></image>
        <image class="wave" src="/img/wave.png" mode="aspectFill"></image>
        <image class="wave wave-bg" src="/img/wave.png" mode="aspectFill"></image>
      </view>
      <view class="bd">
         <image class="smalltitle" src="/img/confirm-word1.png"></image>
        <view class="confirm-btn" bindtap='goToIndex'>
          <text >点我，谢谢~</text>
        </view>
        <text class="copyright">我们不生产资源，我们只是互联网的搬运工~</text>
      </view>
    </view>
  </block>
</view>